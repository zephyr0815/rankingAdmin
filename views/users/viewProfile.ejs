<script type="module">
    import { adminUser } from '/js/apiAdmin.js';
    
    const idx = new URLSearchParams(window.location.search).get('idx');
    
    const roleMap = {
      1: 'Admin',
      2: 'Player',
      3: 'Manager',
      4: 'Cashier'
    };
    
    const statusMap = {
      1: 'Active',
      10: 'Pending',
      11: 'Rejected'
    };
    
    async function loadProfile() {
      if (!idx) return;
    
      try {
        const user = await adminUser.getInfoByIdx(idx);
    
        document.querySelector('.user-grid-card h6').textContent = user.nick || '-';
        document.querySelector('.user-grid-card span.text-secondary-light').textContent = user.email || '-';
        document.getElementById('profile-username').textContent = `: ${user.uid || '-'}`;
        document.getElementById('profile-email').textContent = `: ${user.email || '-'}`;
        document.getElementById('profile-phone').textContent = `: ${user.phone || '-'}`;
        document.getElementById('profile-role').textContent = `: ${roleMap[user.level] || '-'}`;
        document.getElementById('profile-status').textContent = `: ${statusMap[user.state] || '-'}`;
        document.getElementById('profile-balance').textContent =
          user.g_chip !== undefined && user.g_chip > 0
            ? `: ₱${parseInt(user.g_chip).toLocaleString()}`
            : ': -';
    
        if (user.photo) {
          document.querySelector('.user-grid-card img.rounded-circle').src = user.photo;
          document.getElementById('imagePreview').style.backgroundImage = `url('${user.photo}')`;
        }
    
        document.getElementById('username').value = user.uid || '';
        document.getElementById('name').value = user.nick || '';
        document.getElementById('email').value = user.email || '';
        document.getElementById('number').value = user.phone || '';
        document.getElementById('user-level').value = user.level || '';
        document.getElementById('user-status').value = user.state || '';
      } catch (err) {
        console.error('Failed to load user profile', err);
      }
    }
    
    document.addEventListener('DOMContentLoaded', function () {
      loadProfile();
    
      const editUserForm = document.getElementById('editUserForm');
      if (editUserForm) {
        editUserForm.addEventListener('submit', async function (e) {
          e.preventDefault();
    
          if (!idx) {
            Swal.fire({ icon: 'error', title: 'Error', text: 'Missing internal ID' });
            return;
          }
    
          const formData = {
            idx: idx,
            uid: document.getElementById('username').value,
            nick: document.getElementById('name').value,
            email: document.getElementById('email').value,
            phone: document.getElementById('number').value,
            level: document.getElementById('user-level').value,
            state: document.getElementById('user-status').value
          };
    
          if (!formData.uid || !formData.nick || !formData.email || !formData.level || !formData.state) {
            Swal.fire({ icon: 'error', title: 'Validation Error', text: 'Please fill in all required fields' });
            return;
          }
    
          const result = await Swal.fire({
            title: 'Confirm Update',
            text: 'Are you sure you want to update this profile?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, update it!',
            cancelButtonText: 'Cancel'
          });
    
          if (!result.isConfirmed) return;
    
          try {
            await adminUser.updateFull(formData.idx, formData);
            Swal.fire({ icon: 'success', title: 'Success', text: 'Profile updated successfully', timer: 2000, showConfirmButton: false });
            loadProfile();
          } catch (err) {
            console.error('Failed to update profile', err);
            let errorMessage = 'Failed to update profile. Please try again.';
            if (err.response?.data?.reason) {
              errorMessage = err.response.data.reason;
            }
            Swal.fire({ icon: 'error', title: 'Error', text: errorMessage });
          }
        });
      }
    
      const changePasswordForm = document.getElementById('changePasswordForm');
      if (changePasswordForm) {
        changePasswordForm.addEventListener('submit', async function (e) {
          e.preventDefault();
    
          const newPass = document.getElementById('your-password').value.trim();
          const confirmPass = document.getElementById('confirm-password').value.trim();
    
          if (!newPass || !confirmPass) {
            return Swal.fire('Error', 'Please fill in both password fields.', 'error');
          }
    
          if (newPass !== confirmPass) {
            return Swal.fire('Error', 'Passwords do not match.', 'error');
          }
    
          try {
            const confirm = await Swal.fire({
              title: 'Confirm Password Change',
              text: 'Are you sure you want to change the password?',
              icon: 'warning',
              showCancelButton: true,
              confirmButtonText: 'Yes, change it'
            });
    
            if (confirm.isConfirmed) {
                await adminUser.changePassword(idx, {
                  password: newPass,
                  confirm: confirmPass
                });
              Swal.fire('Success', 'Password changed successfully.', 'success');
              document.getElementById('your-password').value = '';
              document.getElementById('confirm-password').value = '';
            }
          } catch (err) {
            console.error('Change password error:', err);
            Swal.fire('Error', 'Failed to change password.', 'error');
          }
        });
      }
    
      const imageUpload = document.getElementById('imageUpload');
      if (imageUpload) {
        imageUpload.addEventListener('change', function () {
          if (this.files && this.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
              document.getElementById('imagePreview').style.backgroundImage = `url(${e.target.result})`;
              document.getElementById('imagePreview').style.display = 'none';
              $('#imagePreview').fadeIn(650);
            };
            reader.readAsDataURL(this.files[0]);
          }
        });
      }
    
      function initializePasswordToggle(toggleSelector) {
        $(toggleSelector).on('click', function () {
          $(this).toggleClass('ri-eye-off-line');
          const input = $($(this).attr('data-toggle'));
          input.attr('type', input.attr('type') === 'password' ? 'text' : 'password');
        });
      }
      initializePasswordToggle('.toggle-password');
    });
    </script>
    
    