                background: '#010116',
                color: '#ffffff',
                confirmButtonColor: '#e74c3c'
            });
        }
    }
</script>

<script type="module">
  // 1) Define timeAgo first
  function timeAgo(date) {
    const seconds = Math.floor((Date.now() - new Date(date)) / 1000);
    const intervals = {
      year:   31536000,
      month:  2592000,
      week:   604800,
      day:    86400,
      hour:   3600,
      minute: 60,
      second: 1
    };
    for (const [unit, sec] of Object.entries(intervals)) {
      const count = Math.floor(seconds / sec);
      if (count > 1)   return `${count} ${unit}s ago`;
      if (count === 1) return `1 ${unit} ago`;
    }
    return 'just now';
  }

  // 2) Then your notification loader
  const base = `${window.location.origin}/api/notifications`;

  async function loadNotifications() {
    try {
      // unread count
      const cResp = await fetch(`${base}/unread/count`, { credentials: 'include' });
      if (!cResp.ok) throw new Error('Count fetch failed');
      const { count } = await cResp.json();
      document.getElementById('notificationBadgeIcon').textContent = count;

      // latest notifications
      const lResp = await fetch(`${base}?limit=5`, { credentials: 'include' });
      if (!lResp.ok) throw new Error('List fetch failed');
      const notes = await lResp.json();

      const list = document.getElementById('notificationList');
      list.innerHTML = '';
      if (notes.length === 0) {
        list.innerHTML = `<div class="px-24 py-12 text-sm text-secondary-light">No notifications.</div>`;
      } else {
        notes.forEach(n => {
          const a = document.createElement('a');
          a.href = `/users/users-list?highlightUid=${encodeURIComponent(n.uid)}`;
          a.className = `
            px-24 py-12 d-flex align-items-start gap-3 mb-2 justify-content-between
            ${n.is_read === 0 ? 'bg-neutral-50' : ''}
          `.trim();
          a.innerHTML = `
            <div class="d-flex align-items-center gap-3">
              <span class="w-44-px h-44-px bg-info-subtle text-info-main rounded-circle d-flex justify-content-center align-items-center flex-shrink-0">
                ðŸ””
              </span>
              <div>
                <h6 class="text-md fw-semibold mb-2">${n.title}</h6>
                <p class="mb-0 text-sm text-secondary-light">${n.message}</p>
              </div>
            </div>
            <span class="text-sm text-secondary-light flex-shrink-0">
              ${timeAgo(n.created_at)}
            </span>
          `;
          a.addEventListener('click', async () => {
            await fetch(`${base}/${n.id}/read`, { method: 'PUT', credentials: 'include' });
            loadNotifications();
          });
          list.appendChild(a);
          a.classList.add('animate-fadein');
        });
      }
    } catch (err) {
      console.error('Notification load error', err);
      document.getElementById('notificationList').innerHTML =
        `<div class="px-24 py-12 text-sm text-danger">Error loading notifications.</div>`;
    }
  }

  // 3) Kick it off
  document.addEventListener('DOMContentLoaded', () => {
    loadNotifications();
    setInterval(loadNotifications, 30000);
  });
</script>